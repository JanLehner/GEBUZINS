# Stylescop settings

# Sets the C# language version to the latest supported version (C# 10.0 as of September 2021).
[*.cs]
csharp_version = 10.0

# Indentation and spacing
[*.cs]
indent_size = 4
indent_style = space
insert_final_newline = true
end_of_line = lf

# Using directive placement
[*.cs]
dotnet_separate_import_directive_groups = false

# Enforce naming conventions
[*.cs]
dotnet_naming_symbols.case_style = pascal_case
dotnet_naming_symbols.approximate_match = true
dotnet_naming_rule.interface_should_be_begins_with_i.severity = suggestion
dotnet_naming_rule.interface_should_be_begins_with_i.symbols = interface
dotnet_naming_rule.enum_should_be_begins_with_e.severity = suggestion
dotnet_naming_rule.enum_should_be_begins_with_e.symbols = enum

# Code organization and layout
[*.cs]
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false
dotnet_separate_namespace_groups = false

# Spacing within method declarations
[*.cs]
dotnet_style_qualification_for_event = true:suggestion
dotnet_style_qualification_for_field = true:suggestion
dotnet_style_qualification_for_method = true:suggestion
dotnet_style_qualification_for_property = true:suggestion
dotnet_style_qualification_for_type = true:suggestion

